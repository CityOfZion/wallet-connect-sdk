{
  "name": "@cityofzion/wallet-connect-sdk-react",
  "version": "2.3.1",
  "description": "Wallet-Connect-SDK to be used on React Apps",
  "keywords": [
    "wallet",
    "wallet-connect",
    "javascript",
    "typescript",
    "react",
    "libraries"
  ],
  "author": "Gil Lopes Bueno <melanke.hc@gmail.com>",
  "homepage": "https://github.com/CityOfZion/wallet-connect-sdk#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/wallet-connect-sdk.git"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "docs": "typedoc",
    "fmt": "eslint .",
    "publishDocs:develop": "aws s3 sync ./docs s3://marketing-neon-wallet/dev/wksdk/react --acl public-read",
    "publishDocs:prod": "aws s3 sync ./docs s3://marketing-neon-wallet/prod/wksdk/react --acl public-read",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "@cityofzion/wallet-connect-sdk-core": "2.3.1",
    "@walletconnect/sign-client": "2.0.0-rc.3",
    "@walletconnect/types": "2.0.0-rc.3",
    "@cityofzion/neo3-invoker": "1.3.0",
    "@cityofzion/neo3-signer": "1.0.1"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.4",
    "react-scripts": "^4.0.3",
    "typescript": "^4.3.2",
    "typedoc": "^0.22.10"
  },
  "files": [
    "dist"
  ]
}
